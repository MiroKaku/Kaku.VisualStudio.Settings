root = true

[*]
charset     = utf-8-bom
end_of_line = crlf

[*.{c,c++,cc,cpp,cxx,h,h++,hh,hpp,hxx,idl,inl,ipp,tlh,tli}]
indent_style             = space
indent_size              = 4
insert_final_newline     = true
trim_trailing_whitespace = true
vc_generate_documentation_comments = doxygen_slash_star

[*.{js,json,xml,toml,xaml,yaml}]
indent_style             = space
indent_size              = 2
insert_final_newline     = true
trim_trailing_whitespace = true

[*.rc]
charset = utf-16le

[*.bat]
charset = utf-8
insert_final_newline = true
